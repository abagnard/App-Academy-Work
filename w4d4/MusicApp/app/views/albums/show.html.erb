
<h1> <%= @album.name %> Information</h1>


<h2>Tracks</h2>

<ul>
  <% @album.tracks.each do |track| %>
    <li><%= link_to track.name track_url(track)%></li>
  <% end %>
</ul>


<ul>
  <li><%= link_to "Create New Track" new_album_track_url(@album)%></li>
  <li><%= link_to "Edit Album", edit_album_url(@album) %></li>
  <li><%= link_to "Delete Album", album_url, method: :delete %></li>
  <li><%= link_to @album.band.name, band_url(@album.band) %></li>
</ul>
