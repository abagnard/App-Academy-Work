<h1> <%= @band.name %> Information</h1>

<h2>Albums</h2>

<ul>
  <% @band.albums.each do |album| %>
    <li><%= link_to album.name album_url(album)%></li>
  <% end %>
</ul>

<ul>
  <li><%= link_to "Create New Album", new_band_album_url(@band)%></li>
  <li><%= link_to "Edit Band", edit_band_url(@band) %></li>
  <li><%= link_to "Delete Band", band_url, method: :delete %></li>
  <li><%= link_to "Back To Band List", bands_url %></li>
</ul>
